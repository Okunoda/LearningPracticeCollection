<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.erywim.dao.ChatMemoryDao">
<!--    <update id="updateByUserId">-->
        <insert id="save">
            INSERT INTO chat_memory (user_id, message, `role`)
            VALUES
            <foreach collection="chatMemoryList" item="item" separator=",">
                (#{item.userId}, #{item.message}, #{item.role})
            </foreach>

        </insert>

    <!--    </update>-->
    <delete id="deletaByUserId">
        delete from chat_memory
        where user_id = #{o}
    </delete>


    <select id="queryById" resultType="com.erywim.entity.ChatMemory">
        select *
        from chat_memory
        where id = #{o}
    </select>
    <select id="queryByUserId" resultType="com.erywim.entity.ChatMemory">
        select *
        from chat_memory
        where user_id = #{o}
    </select>
</mapper>